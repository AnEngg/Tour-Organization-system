<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l1"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_cv_booking_info"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="25dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/l2"
                android:padding="8dp"
                android:orientation="horizontal">

<!--                <ImageView-->
<!--                    android:layout_width="100dp"-->
<!--                    android:layout_height="150dp"-->
<!--                    android:id="@+id/lv_img_booking_place_profile"-->
<!--                    android:layout_marginRight="5dp"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:src="@drawable/profileimage"-->
<!--                    />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/l3"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lv_tv_booking_place_title"
                        android:text="Package Title"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/purple_700"
                        android:textAlignment="center"
                        android:padding="5dp"
                        android:fontFamily="sans-serif-condensed-medium"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lv_img_view_booking_place_description_title"
                        android:text="Booking Tour Description"
                        android:textColor="@color/purple_700"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lv_tv_view_booking_place_description"
                        android:text="Package Description"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:autoLink="phone"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lv_img_view_booking_place_features_title"
                        android:text="Booking Tour Features"
                        android:textColor="@color/purple_700"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lv_view_booking_place_features"
                        android:text="Booking Tour Features"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lv_img_view_booking_place_paid_amount_title"
                        android:text="Paid Amount"
                        android:textColor="@color/purple_700"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lv_view_booking_place_paid_amount"
                        android:text="Paid Amount"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lv_img_view_booking_place_date_time_title"
                        android:text="Date and Time"
                        android:textColor="@color/purple_700"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lv_view_booking_place_date_time"
                        android:text="Date and Time"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_marginTop="8dp"
                        android:autoLink="phone"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/view1"
                        android:background="@color/grey"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</ScrollView>